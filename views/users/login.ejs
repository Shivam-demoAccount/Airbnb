<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post">
            <div class="md-3">
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  name="username"
                  id="username"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">Please provide a valid username.</div>
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="md-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  name="password"
                  id="password"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">Please provide a Valid Password.</div>
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="col-6 offset-4 mt-3">
                  <button class="btn btn-outline-success me-3 mb-3" type="submit">Login</button>
                  <button class="btn btn-outline-success me-3 mb-3" type="reset">Clear</button>
              </div>
        </form>
    </div>
</div>