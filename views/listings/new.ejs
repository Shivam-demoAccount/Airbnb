<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h2>Create New Listing</h2>
    <br />
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="md-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          id="title"
          placeholder="Add a catchy title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please provide a valid Title.</div>
      </div>
      <div class="md-3 mt-2">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          id="description"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          Please provide a valid short description.
        </div>
      </div>
      <div class="md-3 mt-2">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          type="file"
          name="listing[image]"
          id="image"
          class="form-control"
          required
        />
      </div>
      <div class="row mt-2">
        <div class="md-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            id="price"
            class="form-control"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Please provide a valid price.</div>
        </div>
        <div class="md-3 col-md-4">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            id="location"
            class="form-control"
            placeholder="Jaipur, Rajasthan"
            required
          />
          <div class="invalid-feedback">Please provide a valid location.</div>
        </div>
        <div class="md-3 col-md-4">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            id="country"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please provide a valid country.</div>
        </div>
      </div>
      <div class="md-3 mt-3">
        <button type="listing[submit]" class="editBtn btn btn-dark add-btn">
          Submit List
        </button>
        <button type="reset" class="editBtn btn btn-dark add-btn">
          Clear Details
        </button>
      </div>
      <br /><br />
    </form>
  </div>
</div>